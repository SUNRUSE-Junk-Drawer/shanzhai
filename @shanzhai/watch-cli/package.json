{
  "name": "@shanzhai/watch-cli",
  "description": "A CLI tool which performs a build of the Shanzhai project in the current directory, watching for changes and rebuilding automatically.",
  "version": "0.0.11",
  "engines": {
    "node": ">=17.6.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "!**/unit.*",
    "!test-data"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jameswilddev/shanzhai"
  },
  "license": "MIT",
  "dependencies": {
    "chokidar": "3.5.3",
    "@shanzhai/change-tracking-helpers": "0.0.14"
  },
  "devDependencies": {
    "@shanzhai/interfaces": "0.0.26",
    "uuid": "8.3.2",
    "@types/uuid": "8.3.4"
  },
  "bin": "./index.js"
}
